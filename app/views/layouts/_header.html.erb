<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.supervisor? %>
            <li class="dropdown">
              <%= link_to t("Admin.Subject"), "#", class: "dropdown-toggle", 
                  data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t("Admin.All_subject"), admin_subjects_path %></li>
                <li><%= link_to t("Create"), new_admin_subject_path %></li>
              </ul>
            </li>
            <li><%= link_to t("Admin.All_user"), admin_root_path %></li>
            <li class="dropdown">
              <%= link_to t("Admin.course_link"), "#", class: "dropdown-toggle",
                data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t("all_courses"), admin_courses_path %></li>
                <li><%= link_to t("new_course"), new_admin_course_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <%= link_to t("account"), "#", class: "dropdown-toggle", 
                  data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), admin_user_path(current_user) %></li>
                <li><%= link_to t("setting"), edit_admin_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("logout"), logout_path, method: "delete" %>
                </li>
              </ul>
          </li>
          <% elsif %>
            <li><%= link_to t("users"), users_path %></li>
            <li class="dropdown">
              <%= link_to t("account"), "#", class: "dropdown-toggle", 
                  data: {toggle: "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t("profile"), current_user %></li>
                <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("logout"), logout_path, method: "delete" %>
                </li>
              </ul>
          </li>
          <% end %>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
