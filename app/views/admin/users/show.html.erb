<% provide :title, @user.name %>

<div class="container">
  <div class="row text-center">
    <div class="col-md-12">
      <br/><br/>
      <h3>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h3>
      <br/><br/>
    </div>
  </div>             
  <div class="row db-padding-btm db-attached">
    <h1 class="text-left"><%= t "course_of_user" %></h1>
    <% @user.courses.each do |course| %>    
      <div class="col-md-6">
        <div class="db-wrapper">
          <li>
            <h1><%= link_to course.name, [:admin, course] %></h1>
          </li>
        </div>
      </div>
    <% end %>
  </div>
</div>
